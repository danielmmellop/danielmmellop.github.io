---
const { names, className } = Astro.props;
---

<div class={className}>
    {
        names.map((name: string) => (
            <span class:list={[name]}>
            {name}
        </span>
        ))
    }    
</div>

<style>
    div {
        margin-bottom: 2rem;
    }
    span {
        color: var(--color-text);
        padding: 0.4rem 0.5rem;
        border: 1rem;
        border-radius: 1rem;
        font-weight: bold;
        margin-right: 0.4rem;
    }
    .oi {
        background-color: tomato;
    }
    .golang { background-color: #00a8d7; }
    .ubuntu { background-color: #2B0D25; }
    .linux {background-color: #55a7cc}
    .python {
        background: rgb(70,130,178);
        background: linear-gradient(90deg, rgba(70,130,178,1) 0%, rgba(255,212,54,1) 100%);
    }
    .javascript { 
        color: var(--color-black); 
        background-color: #fbfb5e;
    }
</style>

